# Environment variables template
# Copy this to .env and fill in your actual values

# API Configuration
REACT_APP_API_BASE_URL=http://localhost:3001

# Authentication - REQUIRED for production
REACT_APP_CLERK_PUBLISHABLE_KEY=pk_live_your_clerk_publishable_key_here

# AI Services - OPTIONAL (will use offline mode if not provided)
REACT_APP_GEMINI_API_KEY=your_gemini_api_key_here

# App Configuration
REACT_APP_APP_NAME=WellnessApp
REACT_APP_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=production

# Feature Flags
REACT_APP_ENABLE_OFFLINE_MODE=true
REACT_APP_ENABLE_ANALYTICS=true

# Health Integration
REACT_APP_HEALTH_KIT_ENABLED=true
REACT_APP_GOOGLE_FIT_ENABLED=true

# Video Storage (optional - for cloud deployment)
REACT_APP_VIDEO_STORAGE_PROVIDER=aws
REACT_APP_VIDEO_STORAGE_API_KEY=your_video_storage_key_here
REACT_APP_VIDEO_STORAGE_BUCKET=your_bucket_name_here

# For Render.com deployment:
# 1. Set REACT_APP_CLERK_PUBLISHABLE_KEY with your actual Clerk key
# 2. Set REACT_APP_GEMINI_API_KEY with your Google Gemini API key (optional)
# 3. Set REACT_APP_ENVIRONMENT=production
# 4. Set REACT_APP_API_BASE_URL=https://your-api-domain.com (if using separate backend)